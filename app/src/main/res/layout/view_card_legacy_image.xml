<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:lb="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="androidx.leanback.widget.BaseCardView">

    <!-- Flattened hierarchy: Using ConstraintLayout instead of RelativeLayout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clipToOutline="true"
        android:clipChildren="true">

        <org.jellyfin.androidtv.ui.AsyncImageView
            android:id="@+id/main_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:contentDescription="@null"
            android:scaleType="centerCrop"
            android:clipToOutline="true"
            android:elevation="0dp"
            app:crossfadeDuration="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            lb:layout_viewType="main" />

        <ImageView
            android:id="@+id/favIcon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginBottom="2dp"
            android:alpha="0.8"
            android:src="@drawable/ic_heart_red"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/main_image"
            app:layout_constraintBottom_toBottomOf="@id/resumeProgress"
            tools:visibility="visible" />

        <!-- Resolution Indicator -->
        <FrameLayout
            android:id="@+id/resolutionIndicator"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="1.8dp"
            android:layout_marginTop="-2dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/main_image"
            app:layout_constraintTop_toTopOf="@id/main_image"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/resolutionBackground"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/blurred_user_page_background"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/resolutionText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="@string/lbl_unwatched"
                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="7sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck"
                tools:text="4K" />

        </FrameLayout>

        <!-- Audio Codec Indicator -->
        <FrameLayout
            android:id="@+id/audioCodecIndicator"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="1.8dp"
            android:layout_marginTop="-8dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/main_image"
            app:layout_constraintTop_toBottomOf="@id/resolutionIndicator"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/audioCodecBackground"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/blurred_user_page_background"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:id="@+id/audioCodecText"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="@string/lbl_unwatched"
                android:gravity="center"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="7sp"
                android:textStyle="bold"
                tools:ignore="TextContrastCheck"
                tools:text="DTS" />

        </FrameLayout>

        <ProgressBar
            android:id="@+id/resumeProgress"
            style="@style/overlay_progress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:max="100"
            android:maxHeight="5sp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/main_image"
            app:layout_constraintEnd_toEndOf="@id/main_image"
            app:layout_constraintBottom_toBottomOf="@id/main_image"
            tools:visibility="visible" />

        <FrameLayout
            android:id="@+id/icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="4dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/iconBackground"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@null"
                android:src="@drawable/circle_background"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iconImage"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:contentDescription="@null"
                android:layout_gravity="center"
                android:visibility="visible" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/watchedIndicator"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="4dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/main_image"
            app:layout_constraintTop_toTopOf="parent"
            tools:visibility="visible">

            <ImageView
                android:id="@+id/watched"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:contentDescription="@null"
                android:src="@drawable/squared_accent"
                tools:ignore="ImageContrastCheck" />

            <TextView
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="2"
                android:shadowRadius="4"
                android:id="@+id/unwatchedCount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:contentDescription="@string/lbl_unwatched"
                android:textAlignment="center"
                android:textSize="9sp"
                android:gravity="center"
                tools:ignore="TextContrastCheck"
                tools:text="5"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/checkMark"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_watch"
                android:contentDescription="@null"
                android:visibility="invisible"/>

        </FrameLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/name_overlay"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#1A1A1A"
            android:padding="4dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="@id/main_image"
            app:layout_constraintEnd_toEndOf="@id/main_image"
            app:layout_constraintBottom_toBottomOf="@id/main_image"
            tools:visibility="visible">

            <TextView
                android:id="@+id/overlay_text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_marginEnd="2dp"
                android:contentDescription="@string/lbl_name"
                android:ellipsize="end"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/overlay_count"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:text="overlay text" />

            <TextView
                android:id="@+id/overlay_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="3dp"
                android:alpha=".7"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/info_field"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lb_basic_card_info_height"
        android:paddingStart="2dp"
        android:paddingTop="@dimen/lb_basic_card_info_padding_top"
        android:paddingEnd="2dp"
        android:paddingBottom="@dimen/lb_basic_card_info_padding_bottom"
        lb:layout_viewType="info">

        <TextView
            android:id="@+id/title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/lb_basic_card_info_text_margin"
            android:ellipsize="marquee"
            android:fontFamily="sans-serif-condensed"
            android:layerType="hardware"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="@color/lb_basic_card_title_text_color"
            android:textDirection="locale"
            android:textSize="@dimen/lb_basic_card_title_text_size"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title text" />

        <TextView
            android:id="@+id/content_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/lb_basic_card_info_text_margin"
            android:layout_marginBottom="@dimen/lb_basic_card_info_text_margin"
            android:ellipsize="marquee"
            android:fontFamily="sans-serif-condensed"
            android:layerType="hardware"
            android:marqueeRepeatLimit="marquee_forever"
            android:singleLine="true"
            android:textColor="@color/lb_basic_card_title_text_color"
            android:textDirection="locale"
            android:textSize="@dimen/lb_basic_card_content_text_size"
            android:shadowColor="#000000"
            android:shadowDx="0"
            android:shadowDy="1"
            android:shadowRadius="2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/badge_layout"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="Content text" />

        <LinearLayout
            android:id="@+id/badge_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title"
            app:layout_constraintBottom_toBottomOf="parent">

            <ImageView
                android:id="@+id/extra_badge"
                android:layout_width="@dimen/lb_basic_card_info_badge_size"
                android:layout_height="@dimen/lb_basic_card_info_badge_size"
                android:layout_marginStart="10dp"
                android:contentDescription="@null"
                android:scaleType="fitCenter"
                android:visibility="gone" />

            <TextView
                android:id="@+id/badge_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/lb_basic_card_info_text_margin"
                android:layout_marginBottom="@dimen/lb_basic_card_info_text_margin"
                android:fontFamily="sans-serif-condensed"
                android:singleLine="true"
                android:textColor="@color/lb_basic_card_title_text_color"
                android:textSize="@dimen/lb_basic_card_content_text_size"
                android:shadowColor="#000000"
                android:shadowDx="0"
                android:shadowDy="1"
                android:shadowRadius="2"
                android:visibility="gone" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</merge>
