<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/alphabetSidebar"
        layout="@layout/alphabet_sidebar" />

    <LinearLayout
        android:id="@+id/toolBar"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="376dp"
        android:layout_marginTop="34dp"
        android:orientation="horizontal" />

    <FrameLayout
        android:id="@+id/rowsFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="60dp"
        android:layout_above="@id/statusText"
        android:layout_marginTop="90dp" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/counter"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6sp"
        android:textSize="12sp"
        android:alpha=".6"
        android:fontFamily="sans-serif-light" />

    <TextView
        android:id="@+id/counter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="60sp"
        android:layout_marginBottom="18sp"
        android:textSize="12sp"
        android:textAlignment="viewEnd"
        android:fontFamily="sans-serif-light"
        tools:text="0 | 0" />

    <org.jellyfin.androidtv.ui.NowPlayingView
        android:id="@+id/npBug"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@id/clock"
        android:layout_alignTop="@id/clock"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="2dp" />

    <org.jellyfin.androidtv.ui.ClockUserView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clock"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="27dp"
        android:layout_marginEnd="46dp" />

</RelativeLayout>
